{
  "compilerOptions": {
    "jsx": "react-jsx", // or "react-jsxdev" for dev builds
    "target": "es6", // Adjust target as necessary
    "module": "esnext", // Optional: choose based on your project
    "moduleResolution": "node",
    "strict": true, // Recommended for TypeScript projects
    "esModuleInterop": true, // Ensures compatibility with CommonJS modules
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
